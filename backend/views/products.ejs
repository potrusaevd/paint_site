                <!-- JavaScript заполнит эту область -->
            </div>

            <!-- Контейнер для пагинации. ОН ДОЛЖЕН БЫТЬ ПУСТЫМ! -->
            <nav class="pagination" aria-label="Pagination navigation">
                <!-- JavaScript заполнит эту область -->
            </nav>
        </section>
    </div>

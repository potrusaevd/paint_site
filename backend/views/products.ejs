
    <main class="products-page-main">
        <div class="container">
            <nav class="breadcrumbs">
                <a href="/">Главная</a>
                <span class="breadcrumb-separator">→</span>
                <a href="/catalog">Каталог</a>
                <span class="breadcrumb-separator">→</span>
                <span class="breadcrumb-current" id="pageTitle">Загрузка...</span>
            </nav>

            <div class="products-layout">
                <aside class="products-filters">
                    <h3>Фильтры</h3>
                    <div class="filter-group">
                        <h4>Бренд</h4>
                        <div id="brandsFilterContainer" class="filter-options">
                            <div class="filter-loader"></div>
                        </div>
                    </div>
                    <div class="filter-group">
                        <h4>Цена</h4>
                        <div class="price-filter">
                            <input type="number" placeholder="от" id="priceFrom">
                            <input type="number" placeholder="до" id="priceTo">
                        </div>
                    </div>
                    <button id="applyFiltersBtn" class="btn btn-primary">Применить</button>
                    <button id="resetFiltersBtn" class="btn btn-secondary">Сбросить</button>
                </aside>

                <section class="products-grid-container">
                    <div class="products-toolbar">
                        <span id="productCount">Загрузка товаров...</span>
                        <select id="sortSelect">
                            <option value="Rating_DESC">По популярности</option>
                            <option value="Price_ASC">Сначала дешевые</option>
                            <option value="Price_DESC">Сначала дорогие</option>
                            <option value="ProductName_ASC">По названию (А-Я)</option>
                        </select>
                    </div>
                    <div class="products-grid" id="productsGrid">
                        
                    </div>
                </section>
            </div>
        </div>
    </main>

